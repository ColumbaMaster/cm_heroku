<%= form_for(@usuario) do |f| %>
  <%= render 'shared/error_messages', obj: @usuario %>
  
  <!--
  div class="form-group">
    %= f.label t(:label_lingua) %>
    %= f.select(:lingua, locale, {include_blank: true} , {class: 'form-control', required: true, autofocus: true }) %>
  div>
  -->
  <%= hidden_field_tag :lingua, "pt-BR" %>
  
  <div class="form-group">
    <%= f.label t(:label_nome_completo) %>
    <%= f.text_field :nome, class: 'form-control', autofocus: true, required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label t(:label_email) %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label t(:label_senha) %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label t(:label_confirme_a_senha) %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  
  <div class="form-row">
    <div class="form-group col-sm-6">
      <%= f.label "#{t :label_telefone } 1" %>
      <%= f.phone_field :tel1, class: 'form-control', required: true, 'data-inputmask': mask_tel %>
    </div>
    
    <div class="form-group col-sm-6">
      <%= f.label "#{t :label_telefone } 2" %>
      <%= f.phone_field :tel2, class: 'form-control validar', 'data-inputmask': mask_tel %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label t(:label_nome_competicao) %>
    <%= f.text_field :nome_time, class: 'form-control', autofocus: true, required: true, placeholder: (t :msg_info_nome_time)  %>
  </div>
  
  <div class="form-group">
    <%= f.label t(:label_fuso) %>
    <%= f.select :fuso, timezone_for_select, {include_blank: true}, {class: 'form-control', required: true} %>
  </div>
  
  <%= f.submit yield(:button_text), class: botao_estilo %>
<% end %>
