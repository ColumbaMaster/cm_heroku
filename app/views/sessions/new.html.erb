<% provide(:title, t(:label_entrar)) %>
<h4><strong><%= t(:label_entrar) %></strong></h4>

<div class="row">
  <div class="col-md-6 ml-md-auto mr-md-auto">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label t(:label_email) %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label t(:label_senha) %>
        <%= f.password_field :password, class: 'form-control' %>
        <small id="session_passwordHelp" class="form-text text-muted">
          <%= link_to "(" + t(:label_esqueceu_senha) + ")", new_password_reset_path %>
        </small>
      </div>  
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t(:label_manter_conectado) %></span>
      <% end %>
      
      <%= f.submit t(:label_entrar), class: botao_estilo %>
    <% end %>
    <br />
    <p><%= t(:label_nao_inscrito) + " " %><%= link_to t(:label_signup_now), inscrever_path %></p>
  </div>
</div>

