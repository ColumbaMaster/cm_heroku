<%= form_with(model: preparo, local: true) do |form| %>
  <%= render 'shared/error_messages', obj: preparo %>

  <div class="form-group">
    <%= form.label :nome, t(:label_nome) %>
    <%= form.text_field :nome, class: 'form-control', required: true, size: 50 %>
  </div>

  <div class="form-group">
    <%= form.label :descricao, t(:label_descricao) %>
    <%= form.text_area :descricao, cols: 100, rows: 10, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tipo_prova, t(:label_tipo) %>
    <%= form.select(:tipo_prova, tipo_prova_for_select, {include_blank: true} , {class: 'form-control', required: true }) %>
  </div>

  <div class="actions">
    <%= form.submit yield(:button_text), class: botao_estilo %>
  </div>
<% end %>
