<% provide(:title, t(:label_preparo)) %>

<div id="index_msg"></div>
<h4><strong><%= t :label_preparo %></strong></h4>
<%= link_to new_preparo_path, class: botao_link do %>
  <span class="fa fa-plus"></span> <%= "#{t :label_cadastrar} #{t :label_preparo}" %>
<% end %>

<div id="lista_preparo" class="list-group">
  <% @preparos.each do |preparo| %>
    <div class="list-group-item">
      <div class="row linha-1-4">
        <div class="col-sm-6">
          <strong><%= t(:label_nome) %></strong>: <%= preparo.nome %>
        </div>
        <div class="col-sm-6">
          <strong><%= t(:label_tipo) %></strong>: <%= t("label_tipo_prova_#{preparo.tipo_prova}").upcase %>
        </div>
      </div>
      <div class="row linha-2-0">
        <div class="col-sm-12">
          <%= link_to edit_preparo_path(preparo), class: botao_link, :title => t(:label_editar), :rel => 'tooltip', "data-placement" => "bottom" do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <!--
          %= link_to show_modal_equipe_path(preparo),  class: botao_link, remote: true, :title => "#{t(:label_adicionar_compl, compl: t(:label_pombo))}", :rel => 'tooltip', "data-placement" => "bottom" do %
            <span class="fa fa-plus-circle"></span>
          % end %
          -->
          <%= link_to preparo, method: :delete, data: { confirm: t(:msg_quest_apagar_padrao) }, class: botao_link, :title => t(:label_excluir), :rel => 'tooltip', "data-placement" => "bottom" do %>
            <span class="fa fa-trash"></span>
          <% end %>
        </div>
      </div>
      
    </div>
  <% end %>
</div>

<br>
<div id="modal">
</div>

